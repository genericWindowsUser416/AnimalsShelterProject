@page "/ShelterCreationPage"
@using System.ComponentModel.DataAnnotations

<style>
    .form-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
    }

    .input-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .input-hint {
        position: absolute;
        left: 8px;
        top: 50%;
        transform: translateY(-50%);
        color: #666;
        pointer-events: none;
        transition: 0.2s;
    }

    input, textarea {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    textarea {
        height: 100px;
    }

    .create-button {
        background-color: #4CAF50;
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

    .create-button:disabled {
        background-color: #cccccc;
        cursor: not-allowed;
    }

    h3 {
        margin-bottom: 0.5rem;
    }

    .input-hint {
        position: absolute;
        left: 8px;
        top: 50%;
        transform: translateY(-50%);
        color: #666;
        pointer-events: none;
        transition: 0.2s;
        opacity: 1;
    }

    input:not(:placeholder-shown) + .input-hint,
    textarea:not(:placeholder-shown) + .input-hint {
        opacity: 0;
    }
</style>

<div class="form-container">
    <EditForm Model="@shelter" OnValidSubmit="HandleSubmit">
        <h3>Название приюта:</h3>
        <div class="input-group">
            <input @bind="shelter.Name" @bind:event="oninput" placeholder=" " />
            @if (string.IsNullOrWhiteSpace(shelter.Name))
            {
                <span class="input-hint">1. Введите название</span>
            }
        </div>

        <h3>Месторасположение вашего приюта:</h3>
        <div class="input-group">
            <input @bind="shelter.Address" @bind:event="oninput" placeholder=" " />
            @if (string.IsNullOrWhiteSpace(shelter.Address))
            {
                <span class="input-hint">2. Укажите адрес</span>
            }
        </div>

        <h3>Описание приюта:</h3>
        <div class="input-group">
            <textarea @bind="shelter.Description" @bind:event="oninput" placeholder=" "></textarea>
            @if (string.IsNullOrWhiteSpace(shelter.Description))
            {
                <span class="input-hint">3. Добавьте описание</span>
            }
        </div>

        <button type="submit" class="create-button" disabled="@(!IsFormValid())">
            СОЗДАТЬ
        </button>
    </EditForm>
</div>

@code {
    private Shelter shelter = new Shelter();

    private bool IsFormValid()
    {
        return !string.IsNullOrWhiteSpace(shelter.Name) &&
               !string.IsNullOrWhiteSpace(shelter.Address) &&
               !string.IsNullOrWhiteSpace(shelter.Description);
    }

    private void HandleSubmit()
    {
    }

    public class Shelter
    {
        [Required(ErrorMessage = "Обязательное поле")]
        public string Name { get; set; }

        [Required(ErrorMessage = "Обязательное поле")]
        public string Address { get; set; }

        [Required(ErrorMessage = "Обязательное поле")]
        public string Description { get; set; }
    }
}