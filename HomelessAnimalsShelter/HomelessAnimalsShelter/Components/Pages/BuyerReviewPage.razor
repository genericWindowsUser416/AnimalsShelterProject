@page "/BuyerReviewPage"
<PageTitle>BuyerReviewPage</PageTitle>


<div class="header-container">
    <h3>Напишите отзыв:</h3>
    <a href="/shelterlist" class="home-button">НА ГЛАВНУЮ</a>
</div>

<div>
    <textarea type="text" class="input-Field" />
    <button class="send-review-btn">Отправить отзыв</button>
</div>

<div class="rating">
    <input type="radio" name="star" id="star5" value="5">
    <label for="star5">★</label>

    <input type="radio" name="star" id="star4" value="4">
    <label for="star4">★</label>

    <input type="radio" name="star" id="star3" value="3">
    <label for="star3">★</label>

    <input type="radio" name="star" id="star2" value="2">
    <label for="star2">★</label>

    <input type="radio" name="star" id="star1" value="1">
    <label for="star1">★</label>
</div>

<style>

    .home-button {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        font-size: 18px;
    }

        .home-button:hover {
            background-color: #bb2d3b;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
   

    .input-Field {
        width: 100%;
        height: 700px;
        font-size: 20px;
        padding: 10px;
        border: 2px solid #000;
        border-radius: 10px;
        outline: none;
        resize: none;
        box-sizing: border-box;
        line-height: 1.5;
        box-shadow: 2px 2px 2px 4px rgba(0.1,0.1,0.1,0.2);
    }

    .send-review-btn {
        width: 300px;
        height: 150px;
        background: dodgerblue;
        font-size: 20px;
        border-radius: 10px;
        position: absolute;
        bottom: 20px;
        right: 20px;
    }

    .send-review-btn:hover {
        transform: translateY(-1px);
    }

        .rating {
            display: flex;
            justify-content: left;
            font-size: 100px;
            flex-direction: row-reverse;
        }

        .rating input {
            display: none;
        }

        .rating label {
            cursor: pointer;
            color: #ccc;
            transition: color 0.3s;
        }

            .rating input:checked ~ label,
            .rating label:hover,
            .rating label:hover ~ label {
                color: gold;
            }

</style>
