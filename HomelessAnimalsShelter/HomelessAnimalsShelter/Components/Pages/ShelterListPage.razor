@using HomelessAnimalsShelter.DAL
@using HomelessAnimalsShelter.BLL
@using HomelessAnimalsShelter.UI.Components.Items
@using HomelessAnimalsShelter.Core.Dtos
@page "/ShelterList"
@rendermode InteractiveServer

@code {
    private List<ShelterDto> shelters;
    private ShelterRepository shelterRepository = new ShelterRepository();
    private ShelterManager shelterManager = new ShelterManager();
    protected override void OnInitialized()
    {
        shelters = shelterRepository.GetAllShelters();
        //shelters = shelterManager.GetAllShelters();
    }
}

@if (shelters != null && shelters.Any())
{
    @foreach (var shelter in shelters)
    {
        <SingleShelterList Name="@shelter.Name"
                           Id="@shelter.Id">
        </SingleShelterList>
    }
}
else
{
    <p>No shelters?!</p>
}
