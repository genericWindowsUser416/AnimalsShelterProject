<style>

	.review-card {
		position: relative;
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: 2px 2px 2px 4px rgba(0.1,0.1,0.1,0.2);
		width: 400px;
	}

	.UserData {

	}

	.ContentsOfTheComment {

	}

	.reject-btn {
		width: 150px;
		height: 50px;
		position: absolute;
		background: lightblue;
		border: 12px;
		border-radius: 10px;
		bottom: 10px;
		right: 10px;
	}

	.accept-btn {
		width: 150px;
		height: 50px;
		position: absolute;
		background: lightblue;
		border: 12px;
		border-radius: 10px;
		top: 10px;
		right: 10px;
	}

	.user-img {
		width: 100px; 
		height: 100px;
		position: absolute;
		top: 10px;
		left: 10px;
	}

	.stars {
		front-size: 100px;
		display: flex;
		flex-direction: column;
	}

</style>

@code
{
	[Parameter]
	public string Name { get; set; } = "-";

	[Parameter]
	public string Description { get; set; } = "-";

}