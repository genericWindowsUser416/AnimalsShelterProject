<h3>ReviewCard</h3>
<div class="review-card">
	<Button Class="reject-btn">Отклонить</Button>
	<Button Class="accept-btn">Принять</Button>
	<h3 class="UserData">@Name</h3>
	<p class="ContentsOfTheComment">@Description</p>
</div>

<style>

	.review-card {
		position: relative;
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: 0 4px 6px rgba(0,0,0,0.1);
		width: 400px;
	}

	.reject-btn {
		width: 150px;
		height: 50px;
		position: absolute;
		background: lightblue;
		border: 12px;
		border-radius: 10px;
		bottom: 10px;
		right: 10px;
	}

	.accept-btn {
		width: 150px;
		height: 50px;
		position: absolute;
		background: lightblue;
		border: 12px;
		border-radius: 10px;
		top: 10px;
		right: 10px;
	}

</style>

@code
{
	[Parameter]
	public string Name { get; set; } = "-";

	[Parameter]
	public string Description { get; set; } = "-";

	[Parameter]
	public int Id { get; set; } = 0;
}