<div style="border: 2px dotted red; width: 200px; margin:5px;">
	<h1>@Name</h1>
	<p>@Description</p>
	<a href="/animal/@Id"><button>Подробнее</button></a>
</div>

@code
{
	[Parameter]
	public string Name { get; set; } = "-";

	[Parameter]
	public string Description { get; set; } = "-";

	[Parameter]
	public int Id { get; set; } = 0;
}